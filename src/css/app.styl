// functions
times(a, b)
  a * b
// variables could add '$' at front as a variable
$base-font = 14px;

// constant
.mt-2
  margin-top times($base-font, 2)

// app global css
.height-fit
  height: 100%

.font-title
  font-size: times($base-font, 1.5) !important
  transition: all 0.3s ease
  &:hover
    text-decoration: underline

.font-subtitle
  font-size: times($base-font, 1.3) !important
  color: rgba(0,0,0,0.4)

.article-title
  font-size: times($base-font, 5.5) !important
  font-weight: 600

.article-subtitle
  font-size: times($base-font, 1.2) !important
  margin-top: times($base-font, 1.2) !important
  font-weight: 400
  font-style: italic
.article-content
  font-size: times($base-font, 1.8) !important
  &:first-letter
    font-size: times($base-font, 3.5) !important
    font-weight: 600
.login-title
  font-size: times($base-font, 3.5) !important
  line-height: times($base-font, 3.0)
  font-weight: 600
.login-padding
  padding: 4rem 7rem;
  margin: auto;

// constant style
.separator
  border-top 1px solid #16245C
  margin 10px 0
.spec-font
  font-family: stag,simplec
.mt-20
  margin-top: 20px
.mt-10
  margin-top: 10px

// temp style for test
.test-border
  border 1px solid red